<div class="card-list-container py-5">
  <% book_images.each do |book_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to book_image_path(book_image.id) do %>
      <%= image_tag book_image.get_image, class: "card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag book_image.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(book_image_path(book_image.id), class: "text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= book_image.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= book_image.caption %></p>
          <span><i class="fas fa-user"></i> By <%= book_image.user.name %> ｜ </span>
          <span><%= link_to "#{book_image.book_comments.count} コメント", book_image_path(book_image.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate book_images %>
</div>